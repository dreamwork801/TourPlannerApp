<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jorge.tour_planner.la_tab3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Dinner"
                android:id="@+id/textView4"
                android:gravity="center" />

            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Dish"
                android:id="@+id/la_evening1"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Cicada"
                android:id="@+id/la_evening2"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Perch"
                android:id="@+id/la_evening3"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Next Door Lounge"
                android:id="@+id/la_evening4"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="The Bistro"
                android:id="@+id/la_evening5"
                android:checked="false" />
            <CheckBox
                android:onClick="la_dinner"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="LA Chapter"
                android:id="@+id/la_evening6"
                android:checked="false" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Activities"
                android:id="@+id/textView3"
                android:gravity="center" />
            <CheckBox
                android:onClick="la_dinner_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Old Hollywood Bar Crawl"
                android:id="@+id/Evening_activity5"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Small-group food walking tour through Old Pasadena"
                android:id="@+id/Evening_activity1"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="City of Dark Angels Ghost Tours "
                android:id="@+id/Evening_activity2"
                android:checked="false" />

            <CheckBox
                android:onClick="la_dinner_activity"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="The Groundlings Theatre "
                android:id="@+id/Evening_activity3"
                android:checked="false" />
            <CheckBox
                android:id="@+id/Evening_activity4"
                android:onClick="la_dinner_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:text="The Improv "
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:checked="false" />


        </LinearLayout>
    </ScrollView>


</FrameLayout>
