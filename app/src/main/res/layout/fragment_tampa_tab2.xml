<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jorge.tour_planner.tampa_tab2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lunch"
                android:id="@+id/textView4"
                android:gravity="center" />

            <CheckBox
                android:onClick="tampa_lunch"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Wright's Gourmet House"
                android:id="@+id/checkBox"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Brocato's Sandwich Shop"
                android:id="@+id/checkBox2"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Daily Eats"
                android:id="@+id/checkBox3"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Ciccio Cali"
                android:id="@+id/checkBox4"
                android:checked="false" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Activities"
                android:id="@+id/textView3"
                android:gravity="center" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Florida Aquarium"
                android:id="@+id/checkBox6"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Tampa Bay History Center"
                android:id="@+id/checkBox7"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Tampa Museum of Art "
                android:id="@+id/checkBox8"
                android:checked="false" />

            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Henry B. Plant Museum "
                android:id="@+id/checkBox9"
                android:checked="false" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Fishing Charters Tampa "
                android:checked="false" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Lettuce Lake Regional Park "
                android:checked="false" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Tampa's Lowry Park Zoo "
                android:checked="false" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Big Cat Rescue "
                android:checked="false" />
            <CheckBox
                android:onClick="tampa_lunch_activity"
                android:layout_margin="30dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Topgolf Tampa "
                android:checked="false" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>
